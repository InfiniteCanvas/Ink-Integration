.dialogue-panel {
    width: 80%;
    background-color: rgba(0, 0, 0, 0.8);
    border-radius: 8px;
    padding: 16px;
    margin-bottom: 20px;
    height: 100%;
}

.dialogue-scroll {
    max-height: 300px;
    min-height: 100px;
    width: 100%;
    height: 100%;
}

.dialogue-text {
    white-space: normal;
    color: rgb(225, 225, 225);
    font-size: 16px;
    -unity-paragraph-spacing: 16px;
    padding: 8px;
}
